<div id="settingBox" class="defaultClass" userID="{{logUser}}">
  <div>
    <div class="centerContent">
      <h2 class="settings underlineText">Change Settings</h2>
    </div>
    <div class="centerContent">
      <h4 class="settings">NOTE! Clicking submit will change all the data below</h4>
    </div>
    <div class="centerContent">
      <h4 class="settings">NOTE! To keep Current password, repeat your current password in all boxes below</h4>
    </div>
    <form class="setForm">
      <div class="centerContent">
        <input value="{{email}}" type="text" placeholder="Email" id="emailSet" />
      </div>
      <div class="centerContent">
        <input value="{{username}}" type="text" placeholder="Username" id="userSet" />
      </div>
      <div class="centerContent">
        <input type="password" placeholder="Enter Current Password" id="passCheck" />
      </div>
      <div class="centerContent">
        <input type="password" placeholder="Enter New Password" id="passSet1" />
      </div>
      <div class="centerContent">
        <input type="password" placeholder="Repeat New Password" id="passSet2" />
      </div>
      <div class="centerContent">
        <button id="setBtn" class="btn btn-primary" type="submit">Submit Changes</button>
      </div>
    </form>
  </div>
  <script src="../javascripts/settings.js"></script>
</div>