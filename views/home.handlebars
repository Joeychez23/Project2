<div class="centerPost">
  <h2>Recent Posts:</h2>
</div>
<div class="row">
  {{#each posts as |post|}}
  <div id="test1" class="col-md-4 setWidth">
    <div class="row defaultRowClass">
      <div class="col-md-12">
        <div class="container-fluid postPreview">
          <div class="row centerPost">
            <div class="col-md-12 centerPost">
              <div class="homeLink">
                <a href="/post/{{post.id}}?portfolio=home">
                  <div class="homeImage" style="background-image: url('{{{post.base64}}}');"></div>
                </a>
              </div>
            </div>
            <div class="col-md-12 centerPost">
              <p>Created by <a class="userLink" href="/portfolio/{{post.user_id}}">{{post.user.username}}</a>
                <br>
                {{ format_date post.date_created }}
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  {{/each}}
</div>