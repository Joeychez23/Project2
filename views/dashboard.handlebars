<div class="defaultClass">
    <div>
        <div class="col-md-12">
            <h2>{{username}} Dashboard</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <h3>Create post</h3>
            <form class="formBox">
                <div>
                    <input type="file" id="imageInput" accept="image/png image/jpg" />
                    <div id="displayImage"></div>
                </div>
                <!--<div>
                    <input type="text" id="postTitle" placeholder="post Title" />
                </div>-->
                <div>
                    <!--<input type="text" id="postContent" placeholder="post Content" />-->
                    <textarea type="text" id="postContent" placeholder="Enter a post content here..." cols="30"
                        rows="2"></textarea>
                </div>
                <div>
                    <button id="subUp" class="btn btn-primary" commentId=''>Update</button>
                    <button id="creUp" class="btn btn-primary">Create</button>
                </div>

            </form>
        </div>

        <!--If posts.length != NULL -->
        {{#if posts.length}}
        <div class="col-md-6 userpost">
            <h3>Current posts:</h3>

            <!--If for each index of posts create post meaning the code below -->
            {{#each posts as |post|}}
            <div class="row defaultRowClass">
                <div class="col-md-8">
                    <a href="/post/{{post.id}}?portfolio=true">
                        <div class="dashImage" style="background-image: url('{{{post.base64}}}');"></div>
                    </a>
                    <!--<h4><a href="/post/{{post.id}}">{{post.title}}</a></h4>-->
                </div>
                <div class="col-md-4 buttonBox">
                    <button class="btn btn-success upBtn" postId="{{post.id}}">UPDATE</button><button
                        class="btn btn-danger delBtn" postId="{{post.id}}">DELETE</button>
                </div>
            </div>
            {{/each}}
        </div>
        {{/if}}
    </div>
</div>

<script src="./javascripts/dashboard.js"></script>